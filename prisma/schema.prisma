// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Connection URL with connection pooling
  directUrl = env("DIRECT_URL")     // Direct connection URL without pooling
  relationMode = "prisma"
}

model MenuFile {
  id        Int      @id @default(autoincrement())
  week      Int      @unique
  fileName  String
  filePath  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
